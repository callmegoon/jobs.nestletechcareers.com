.hero
  color: $white;
  background: url(../images/bg-hero-base@2x.jpg) no-repeat top center;
  background-size: cover;
  width: 100%
  height: calc(100vh - 95px);
  text-align: center;
  position relative
  univers()

  @media tablet
    background: url(../images/bg-hero-650up@2x.jpg) no-repeat;
    background-size: cover;
    height: 650px;

  @media desktop
    background: url(../images/bg-hero-960up@2x.jpg) no-repeat;
    background-size: cover;
    background-position: center center
    height: 60vh;

  &--inner
    width 95%
    height 100%
    margin: 0 auto;
    padding-top 150px
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center

    @media tablet
      padding-top 250px

    @media desktop
      padding-top 350px

  &__title
    color white
    margin-bottom 5px
    font-size 14vw
    line-height 100%
    univers-ultra-condensed()
    text-transform: uppercase

    @media only screen and (min-width: 1020px)
      font-size 14.3rem

    &--accent
      color orange

  &__tagline
    color white
    margin-bottom 30px
    font-size 4.5vw
    line-height 100%
    univers-roman()

    @media desktop
      font-size 2.5rem

    @media tablet
      font-size: 27px;
      line-height: 29px;

  &__button
    color white
    background: black
    width 180px
    display block
    margin 0 auto
    univers-ultra-condensed()
    font-size 1.8rem
    text-transform: uppercase

  .button

    @media tablet
      width: 457px;
      margin: 24px auto;

    @media desktop
      margin-top: 40px;