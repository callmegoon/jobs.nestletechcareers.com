.navDrawer
  width 100vw
  height calc(100vh - 95px)
  margin-top 95px
  padding: 25px 10px 50px 10px
  position fixed
  top 0
  left 0
  z-index 99999
  transform: translateX(100vw)
  opacity 0
  transition: .5s cubic-bezier(.67,.02,.27,.95) 0s
  overflow auto

  @media desktop
    opacity 1
    padding: 25px 0 50px 0
    transition: 0s

.mainNav
  &__list
    margin 0
    padding 0
    list-style: none

    @media desktop
      padding-left 120px

  &__listItem
    margin-bottom 30px
    font-size 3.2rem
    line-height 2.7rem
    text-transform: uppercase
    univers-ultra-condensed()
    letter-spacing: 1px

  &__listLink
    color white

    @media desktop
      transition: .25s

      &:hover
        color black

  &__animated
    opacity 0
    transform: translateX(100px)
    transition: .75s cubic-bezier(.77,.01,.18,1)

    &:nth-of-type(1)
      transition-delay: 0

    &:nth-of-type(2)
      transition-delay: .1s

    &:nth-of-type(3)
      transition-delay: .15s

    &:nth-of-type(4)
      transition-delay: .2s

    &:nth-of-type(5)
      transition-delay: .25s

    &:nth-of-type(6)
      transition-delay: .3s

    &:nth-of-type(7)
      transition-delay: .35s

    &:nth-of-type(8)
      transition-delay: .4s

    &:nth-of-type(9)
      transition-delay: .45s

  &__subList
    margin 10px 0 0 0
    padding 0
    list-style: none

  &__subListItem
    margin-bottom 10px
    padding-left 25px
    text-transform: none
    univers()
    font-size 1.7rem
    line-height 1.7rem
    position relative
    text-transform: uppercase

    &:before
      content ''
      background: white
      width 14px
      height 6px
      display block
      position absolute
      left 0
      top 50%
      transform: translateY(-3px)

  &__subListLink
    color white

    @media desktop
      &:hover
        color black

.utilityNav
  @media desktop
    display none

// Nav Open
.navOpen
  .navDrawer
    opacity 1
    transform: translateX(0)
    transition: .5s cubic-bezier(.67,.02,.27,.95) .3s,opacity .5s cubic-bezier(.67,.02,.27,.95) .35s

    @media desktop
      transition: .75s cubic-bezier(.67,.02,.27,.95) .1s,opacity .75s cubic-bezier(.67,.02,.27,.95) .15s

  .mainNav
    &__animated
      opacity 1
      transform: translateX(0)

      &:nth-of-type(9)
        transition-delay: 0

      &:nth-of-type(8)
        transition-delay: .1s

      &:nth-of-type(7)
        transition-delay: .15s

      &:nth-of-type(6)
        transition-delay: .2s

      &:nth-of-type(5)
        transition-delay: .25s

      &:nth-of-type(4)
        transition-delay: .3s

      &:nth-of-type(3)
        transition-delay: .33s

      &:nth-of-type(2)
        transition-delay: .35s

      &:nth-of-type(1)
        transition-delay: .37s